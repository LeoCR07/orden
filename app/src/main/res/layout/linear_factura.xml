<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="4dp"
    android:animateLayoutChanges="true"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_foreground"
        android:background="@android:color/white"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:id="@+id/cart_view_img"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true">

            </ImageView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linear"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/cart_view_img"
                android:orientation="vertical"
                android:layout_toRightOf="@id/cart_view_img"
                android:layout_marginLeft="4dp">

                <TextView
                    android:id="@+id/cart_iteam_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Cuenta numero"
                    android:textColor="#474444"
                    android:textSize="24sp"
                    ></TextView>

                <TextView
                    android:id="@+id/cart_iteam_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0001"

                    android:textSize="14sp"></TextView>

            </LinearLayout>

            <ImageView
                android:id="@+id/ImgView_Opc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:src="@drawable/ic_menu_fac"></ImageView>

        </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>